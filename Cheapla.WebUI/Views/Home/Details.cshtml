@model DetailViewModel

<div class="container">
<div class="row mt-3 mb-3">

    <div class="col-md-6 px-0">

        <div class="card">
            
            @if (Model.ImagePath == null)
            {
                <img class="card-img-top" style="width:400px ; height:400px" src="~/images/noImage.png/" alt="Card image cap" />

            }

            else
            {
                <a href="~/images/products/@Model.ImagePath" data-lightbox="@Model.Id" data-title="@Model.Name">
                    <img class="card-img-top ms-5" style="width:400px ; height:400px" src="~/images/products/@Model.ImagePath" alt="Card image cap" />
                </a>
            }


            <div class="card-body" style="background-color:darkgray">

                <h5 class="card-title">@Model.Name</h5>

                <p class="card-text">@Model.Summary</p>
                <h5 class="card-title">Stok Adeti:@Model.UnitInStock</h5>

                <h5 class="card-text badge" style="color:red">@Model.UnitPrice TL</h5>
                @if (User.IsLogged())
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="send btn btn-sm btn-outline-warning ms-2" style="display:inline;"><i class="bi bi-cart4"></i> Sepete Ekle</button>
                    </form>
                }
            </div>

        </div>

    </div>

</div>
</div>
