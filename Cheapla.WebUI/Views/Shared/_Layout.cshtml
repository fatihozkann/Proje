

<html>
<head>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />


    <partial name="_CssPartiall"></partial>


    <style>
        label.required:after {
            content: "*\00a0";
            color: red;
            margin-left: 2px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="p-3 text-bg" style="background-color:darkslategray">
        <nav class="navbar navbar-expand-lg navbar-succes bg-succes" style="background-color:darkslategray">

            <div class="container-fluid">

                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">


                    <ul class="navbar-nav me-auto  mb-1 mb-lg-0">

                        <li>
                            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mt-4 ms-6 mb-2  text-white text-decoration-none fw-bold">
                                <i style="color:gold" class="bi bi-award-fill">Cheapla</i>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-white ms-3 mt-3"><i style="color:gold" class="bi bi-house-heart">Ana Sayfa</i></a>
                        </li>

                        <li>
                            <form asp-controller="Home" asp-action="Index" method="get" class="ms-3 mt-2">
                                <div class="input-group mt-3">
                                    <div class="form-outline">
                                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" />
                                        <label class="form-label" for="SearchString">Search</label>
                                    </div>
                                    <button type="submit" value="Search" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>

                            </form>
                        </li>



                    </ul>
                    @if (!User.IsLogged())
                    {


                        <div id="login" class="d-none">
                            <partial name="_LoginPartial" model="new LoginViewModel()"></partial>
                        </div>
                        <div id="welcome" class="text-end">
                            <button id="btnGirisYap" type="button" class="btn btn-outline-warning me-2"><i style="color:red" class="bi bi-box-arrow-in-right">Giriş</i></button>
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-warning">Kayıt-Ol</a>
                        </div>

                    }
                    else
                    {
                        <div class="me-5">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-warning ms-3 mt-1"><i class="bi bi-cart2"></i> Sepetim</a>
                        </div>
                        var firstName = User.GetUserName();

                        var lastName = User.GetUserLastName();
                        <div class="d-flex">

                            <div style="color:crimson;font-weight:bold" class="mt-3 me-5 ms-2">
                                Hoş Geldiniz
                                <b style="color:gold" class="ms-1">@firstName @lastName </b>
                            </div>


                            @if (User.IsAdmin())
                            {
                                <div class="ms-3 text-white mt-3 me-3">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-danger btn-sm"><i class="bi bi-universal-access-circle"></i> Yönetim Paneli</a>
                                </div>
                            }


                            <nav>
                                <div class="container-fluid me-5 ml-3 mb-2 mt-3">
                                    <ul class="navbar-nav">

                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle d-flex align-items-center  me-5"
                                           href="#"
                                           id="navbarDropdownMenuLink"
                                           role="button"
                                           data-mdb-toggle="dropdown"
                                           aria-expanded="false">
                                                <i class="bi bi-person-circle"></i>
                                            </a>

                                            <ul class="dropdown-menu row" aria-labelledby="navbarDropdownMenuLink">
                                                <li>


                                                    <a asp-controller="Account" asp-action="Index" class="btn btn-warning form-control btn-sm me-6"><i class="bi bi-person-circle"></i> Profil Güncelle</a>


                                                </li>
                                                <li>
                                                    <a asp-controller="ChangePassword" asp-action="ChangeUpdate" class="btn btn-warning form-control btn-sm mt-1 me-6"><i class="bi bi-person-circle"></i> Şifre Değiştir</a>
                                                </li>
                                                <li>


                                                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-warning form-control mt-1  me-6"><i class="bi bi-box-arrow-left"></i> Çıkış-Yap</a>

                                                </li>
                                            </ul>

                                        </li>
                                    </ul>
                                </div>
                            </nav>




                        </div>
                    }



                </div>







            </div>

        </nav>
    </header>



    @RenderBody()



    <footer class="text-center text-lg-start bg-light text-muted">

        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">

            <div class="me-5 d-none d-lg-block">
                <span>Sosyal ağlarda bizimle bağlantı kurun:</span>
            </div>

            <div>
                <a href="https://twitter.com/fatihhozzkan" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://twitter.com/fatihhozzkan" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://twitter.com/fatihhozzkan" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="https://www.instagram.com/fatihhozzkan/" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://www.linkedin.com/in/fatih-%C3%B6zkan-62105924b/" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="https://github.com/fatihozkann" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>

        </section>

        <section class="">
            <div class="container text-center text-md-start mt-5">

                <div class="row mt-3">

                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">

                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>Cheapla
                        </h6>



                        <h6>
                            Alacağın Ne Varsa Cheapla Al  <i class="fas fa-gem me-3"></i>


                        </h6>

                    </div>


                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">

                        <h6 class="text-uppercase fw-bold mb-4">İletişim</h6>
                        <p><i class="fas fa-home me-3"></i> Ankara || TR</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            fatihhhozzzkan10@gmail.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> + 90 534 631 10 06</p>
                        <p><i class="fas fa-print me-3"></i> + 90 534 631 10 06</p>
                    </div>

                </div>

            </div>
        </section>

        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2022 Cheapla:
            <a class="text-reset fw-bold" href="https://twitter.com/fatihhozzkan">Tüm Hakları Özkan A.Ş Saklidir</a>
        </div>

    </footer>

    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>

    <partial name="_JsPartiall"></partial>

    <script>
        $('#btnGirisYap').click(function () {
            $('#welcome').addClass('d-none');
            $('#login').removeClass('d-none');
        })
    </script>
    <script>
        $('#btnGirisIptal').click(function () {
            $('#welcome').removeClass('d-none');
            $('#login').addClass('d-none');
        })

        @if (!string.IsNullOrWhiteSpace(TempData["LoginMessage"]?.ToString()))
        {
            @:toastr.error("@TempData["LoginMessage"].ToString()")
        }

        @if (!string.IsNullOrWhiteSpace(TempData["UpdateMessage"]?.ToString()))
        {
            @:toastr.success("@TempData["UpdateMessage"].ToString()");
        }


            lightbox.option({
                'resizeDuration': 200,
                'wrapAround': true,
                'maxWidth': 500,
                'maxHeight': 500

            })
    </script>


</body>
</html>