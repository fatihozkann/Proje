@model List<CommentViewModel>
<style>
    body{
    margin-top:20px;
    background:#eee;
}

    .g-mr-15 {
        margin-right: 1.07143rem !important;
    }
}

    .g-mt-3 {
        margin-top: 0.21429rem !important;
    }
}

.g-height-50 {
    height: 50px;
}

.g-width-50 {
    width: 50px !important;
}


    .g-pa-30 {
        padding: 2.14286rem !important;
    }
}

.g-bg-secondary {
    background-color: #fafafa !important;
}

.u-shadow-v18 {
    box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
}

.g-color-gray-dark-v4 {
    color: #777 !important;
}

.g-font-size-12 {
    font-size: 0.85714rem !important;
}

.media-comment {
    margin-top:20px
}
</style>
<div class="row">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="media g-mb-30 media-comment mt-2">
                    
                    <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                      
                        
                          @foreach (var comment in Model)
        {
                            <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="~/images/products/avatar.gif" alt="Image Description">
                            <p class="card-text fw-bold mt-2">@comment.UserName</p>
                            <p class="card-text fw-bold mt-2" style="color:red">@comment.CommentContent</p>
                            <div class="g-mb-15 mt-3">

                            
                            </div>

        }
                     

                   
                    </div>
                </div>
            </div>

        </div>
    </div>
      
            </div>

