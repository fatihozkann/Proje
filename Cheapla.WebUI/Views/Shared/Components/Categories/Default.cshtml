@model List<CategoryViewModel>
<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">

<div class="list-group">



        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="" asp-route-categoryName="" class="fw-bold list-group-item list-group-item-action  list-group-item-Success mb-4" style="background-color:teal;color:gold">

        Tüm Ürünler
        </a>




        @foreach (var category in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name" class="fw-bold list-group-item list-group-item-action list-group-item-Success @(category.Id.ToString() == ViewContext.RouteData.Values["categoryId"]?.ToString() ? "bg-secondary text-white" : "" )" style="color:gold;background-color:teal">
                  @*  <svg class="bi pe-none me-2" width="16" height="16" style="background-color:cyan"><use style="background-color:aqua" xlink:href="#grid"></use></svg>*@

                @category.Name
            </a>
        }






</div>
</div>
