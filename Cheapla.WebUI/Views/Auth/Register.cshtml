@model RegisterViewModel

<section class="h-100 bg-dark">
    <style>
        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }

        .card-registration .select-arrow {
            top: 13px;
        }
    </style>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col form-control">
                <div class="card card-registration my-4 px-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block d-flex align-items-center">
                            <img src="~/images/products/cheapla'da Fırsatları kaçırma haydi hemen üye ol (1).gif"
                                 alt="Sample photo" class="img-fluid px-3 my-3" style="height:500px"
                               />
                        </div>
                        <div class="col-xl-6">
                            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            <form asp-controller="Auth" asp-action="Register" method="post">
                            

                            
                                                                                                     
                                            
                                        <span class="text-danger fw-bold mt-1" asp-validation-for="FirstName"></span>
                                        <div class="form-outline mb-2 mt-3">
                                            <input type="text" id="form3Example1m" class="form-control form-control-lg" asp-for="FirstName" />
                                            <label class="form-label" asp-for="FirstName"></label>
                                          
                                        </div>
                               
                                        <span class="text-danger fw-bold mt-1" asp-validation-for="LastName"></span>
                                   
                                        <div class="form-outline mb-2">
                                            <input type="text" id="form3Example1n" class="form-control form-control-lg" asp-for="LastName" />
                                            <label class="form-label" asp-for="LastName"></label>
                                           
                                        </div>

                               
                         
                                
                                    
                                   
                              <span class="text-danger fw-bold mt-1" asp-validation-for="Email"></span>
                                <div class="form-outline mb-2">
                                    <input type="text" id="form3Example8" class="form-control form-control-lg" asp-for="Email" />
                                    <label class="form-label" asp-for="Email"></label>
                                      
                                </div>

                                <div class="d-md-flex justify-content-start align-items-center ms-2 mb-4 py-2">

                                    <h6 class="mb-0 me-4">Cinsiyet: </h6>

                                    <div class="form-check form-check-inline mb-0 me-4">
                                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="femaleGender"
                                               value="option1" />
                                        <label class="form-check-label" for="femaleGender">Kadın</label>
                                    </div>

                                    <div class="form-check form-check-inline mb-0 me-4">
                                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="maleGender"
                                               value="option2" />
                                        <label class="form-check-label" for="maleGender">Erkek</label>
                                    </div>

                                  

                                </div>



                                
                                 <span class="text-danger fw-bold mt-1" asp-validation-for="Password"></span>
                                <div class="form-outline mb-2">
                                    <input type="password" id="form3Example8" class="form-control form-control-lg" asp-for="Password" />
                                    <label class="form-label" asp-for="Password"></label>
                                  
                                </div>
                                <span class="text-danger fw-bold mt-1" asp-validation-for="PasswordConfirm"></span>
                                <div class="form-outline mb-2">
                                    <input type="password" id="form3Example8" class="form-control form-control-lg" asp-for="PasswordConfirm" />
                                    <label class="form-label" asp-for="PasswordConfirm"></label>
                                   
                                </div>

                              

                                <div class="d-flex justify-content-end pt-2 mt-5">
                                    <button type="submit" class="btn btn-warning">Kayıt Ol</button>
                                                    
                                </div>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>